<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>ExternalConfigurableRetryLogic</AssemblyName>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <IntermediateOutputPath>$(ObjFolder)$(Configuration).$(Platform).$(AssemblyName)</IntermediateOutputPath>
    <OutputPath>$(BinFolder)$(Configuration).$(Platform).$(AssemblyName)</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="CustomConfigurableRetryLogic.cs" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(ReferenceType)' == 'Package'">
      <ItemGroup>
        <PackageReference Include="Microsoft.Data.SqlClient" />
      </ItemGroup>
    </When>
    <When Condition="'$([MSBuild]::GetTargetFrameworkIdentifier($(TargetFramework)))'=='.NETFramework'">
      <ItemGroup>
        <ProjectReference Include="$(NetFxSource)src\Microsoft.Data.SqlClient.csproj" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="$(NetCoreSource)src\Microsoft.Data.SqlClient.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>
